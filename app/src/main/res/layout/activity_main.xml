<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".grant.MainActivity">

    <Button
        android:id="@+id/bt_request_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_request_contact" />

    <Button
        android:id="@+id/bt_request_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_request_camera" />

    <Button
        android:id="@+id/bt_request_storage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bt_request_storage" />

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/image"
        android:layout_height="wrap_content" />

    <VideoView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>